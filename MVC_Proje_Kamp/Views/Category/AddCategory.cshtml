@model Category

@using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.CategoryName, "Kategori Adı :")
        @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.CategoryName)
        <br />
        @Html.LabelFor(m => m.Description, "Açıklama : ")
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Description)
        <br />
        <button class="btn btn-info">Kategori Ekle</button>

    </div>
}















